<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 뒤로가기 -->
    <TextView
        android:id="@+id/my_info1_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt; 뒤로가기"
        android:textSize="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_info1_profile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/profile" />

        </LinearLayout>

        <!-- 이름-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">

            <!-- 이름란-->
            <TextView
                android:id="@+id/my_info1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님"
                android:textColor="#555555"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />

            <!-- 교통약자 표시-->
            <ImageView
                android:id="@+id/my_info1_mobility_handicapped"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/mobility_hadicapped"
                android:visibility="gone" />


        </LinearLayout>

        <!-- 이메일-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/my_info1_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일@gmail.com"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 하단 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 회원 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/design_myinfo1_background" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"/>

            <!-- 회원 정보 클릭 -->
            <TextView
                android:id="@+id/my_info1_member_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="회원 정보 >"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3.5dp"/>

        <!-- 포인트 확인 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/design_myinfo1_background">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/point"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"/>

            <!-- 포인트 확인 클릭 -->
            <TextView
                android:id="@+id/my_info1_point_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="포인트 확인 >"
                android:textSize="15dp"
                android:textStyle="bold"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3.5dp"/>

        <!-- 등급 확인 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/design_myinfo1_background" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ranking"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"/>

            <!-- 등급 확인 클릭 -->
            <TextView
                android:id="@+id/my_info1_ranking_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="등급 확인 >"
                android:textSize="15dp"
                android:textStyle="bold"/>


        </LinearLayout>

    </LinearLayout>
        


</LinearLayout>