<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/seat_registration2_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt; 뒤로가기"
        android:textSize="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:layout_weight="0.05"
        android:baselineAligned="true"
        android:paddingTop="30dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/check_station_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="승하차역 확인"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/line_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/check_station_notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="승차역과 하차역을 확인하고 시간표를 선택해주세요"
            android:textSize="15dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:background="@drawable/design1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="40dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/departure_pin2_image"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/departure_pin2"
            android:adjustViewBounds="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/departure_station_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발역"
            android:textSize="17dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/line_number7_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7호선"
            android:textSize="17dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:background="@drawable/design1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="40dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/arrive_pin2_image"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/arrive_pin2"
            android:adjustViewBounds="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/arrive_station_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하차역"
            android:textSize="17dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/line_number7_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7호선"
            android:textSize="17dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/subway_line_image"
            android:layout_width="30dp"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/subway_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/line_number7_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="7호선"
                    android:textColor="#7A7F50"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/departure_station_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="출발역"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/departure_station_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="승차"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_list_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/time_list_background"
                android:gravity="center"
                android:minHeight="135dp"
                android:orientation="vertical">

                <!-- 열차 1 -->
                <LinearLayout
                    android:id="@+id/time_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/time_list_select"
                    android:clickable="true"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/time_text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="시간1"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/destination_text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="열차1"
                        android:textColor="#555555"
                        android:textSize="17dp" />
                </LinearLayout>

                <!-- 열차 2 -->
                <LinearLayout
                    android:id="@+id/time_item_2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/time_list_select"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/time_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="시간2"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/destination_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="열차2"
                        android:textColor="#555555"
                        android:textSize="17dp" />
                </LinearLayout>

                <!-- 열차 3 -->
                <LinearLayout
                    android:id="@+id/time_item_3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/time_list_select"
                    android:clickable="true"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/time_text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="시간3"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/destination_text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="열차3"
                        android:textColor="#555555"
                        android:textSize="17dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/line_number7_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="7호선"
                    android:textColor="#7A7F50"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/arrive_station_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="하차역"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/arrive_station_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하차"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/seat_registration2_select_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음으로"
        android:backgroundTint="#3A83BF"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

</LinearLayout>