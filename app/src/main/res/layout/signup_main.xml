<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingStart="35dp"
    android:paddingEnd="35dp"
    android:paddingTop="87dp"
    android:paddingBottom="30dp">

    <!-- 인사 -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="안녕하세요."
        android:textSize="25sp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="23dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo_2"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/logo_2" />

        <TextView
            android:id="@+id/welcome_message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="입니다."
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>

    <!-- 1단계: 이름/이메일 입력 -->
    <EditText
        android:id="@+id/sign_up_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름을 입력하세요"
        android:inputType="textPersonName"
        android:padding="18dp"
        android:singleLine="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <EditText
            android:id="@+id/sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일을 입력하세요"
            android:inputType="textEmailAddress"
            android:padding="18dp"
            android:singleLine="true" />

        <Button
            android:id="@+id/certi_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:backgroundTint="#E7F1F9"
            android:text="인증메일 보내기"
            android:textColor="#3A83BF"
            android:textSize="12sp" />
    </FrameLayout>

    <!-- 2단계: 인증 확인 -->
    <Button
        android:id="@+id/certi_check_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="인증 확인"
        android:backgroundTint="#E7F1F9"
        android:textColor="#3A83BF" />

    <!-- 비밀번호: 기존 GONE -> 보이도록 변경 (표준 Firebase 플로우 호환) -->
    <EditText
        android:id="@+id/sign_up_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요 (6자 이상)"
        android:inputType="textPassword"
        android:padding="18dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/sign_up_pw_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 다시 입력하세요"
        android:inputType="textPassword"
        android:padding="18dp"
        android:singleLine="true" />

    <!-- 최종 완료 버튼: 처음엔 비활성화 -->
    <Button
        android:id="@+id/signup_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="#3A83BF"
        android:padding="15dp"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:enabled="false" />

</LinearLayout>
