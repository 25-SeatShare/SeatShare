<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingStart="35dp"
    android:paddingEnd="35dp"
    android:paddingTop="87dp"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="안녕하세요."
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="23dp"
        android:orientation="horizontal"
        android:gravity="left">


        <ImageView
            android:id="@+id/logo_2"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/logo_2" />

        <TextView
            android:id="@+id/welcome_message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="입니다."
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="normal" />
    </LinearLayout>

    <EditText
        android:id="@+id/sign_up_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름을 입력하세요"
        android:inputType="text"
        android:focusable="true"
        android:padding="18dp"
        android:singleLine="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <EditText
            android:id="@+id/sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일을 입력하세요"
            android:inputType="textEmailAddress"
            android:focusable="true"
            android:padding="18dp"
            android:singleLine="true" />

        <Button
            android:id="@+id/certi_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="#E7F1F9"
            android:text="인증번호 전송"
            android:textColor="#3A83BF"
            android:textSize="12dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="25dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:hint="인증번호를 입력하세요"
            android:inputType="number"
            android:padding="18dp"
            android:singleLine="true" />

        <Button
            android:id="@+id/certi_check_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="#E7F1F9"
            android:text="확인"
            android:textColor="#3A83BF"
            android:textSize="12dp" />
    </FrameLayout>

    <EditText
        android:id="@+id/sign_up_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요"
        android:inputType="text"
        android:focusable="true"
        android:padding="18dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/sign_up_pw_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 다시 입력하세요"
        android:inputType="text"
        android:focusable="true"
        android:padding="18dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/signup_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="#3A83BF"
        android:padding="15dp"
        android:text="확인"
        android:textColor="#FFFFFF" />

</LinearLayout>

