<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 뒤로가기 -->
    <TextView
        android:id="@+id/delete_account_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt; 뒤로가기"
        android:textSize="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <!-- 안내 문구1 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="226dp"
            android:layout_height="38dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/logo_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원을"
            android:textSize="25dp"
            android:layout_marginTop="2dp"
            android:textColor="#606060"
            android:textStyle=""/>

    </LinearLayout>

    <!-- 안내 문구2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탈퇴하시겠습니까?"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp"
            android:textColor="#606060"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp">

        <!-- 이름 라벨 -->
        <TextView
            android:id="@+id/delete_account_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="이름"
            android:textSize="14sp"
            android:textColor="#333333" />

        <!-- 이름 입력 -->
        <EditText
            android:id="@+id/delete_account_name"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/design_input_window1"
            android:hint="이름"
            android:paddingHorizontal="16dp"
            android:textSize="14sp" />

        <!-- 이메일 라벨 -->
        <TextView
            android:id="@+id/delete_account_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="이메일"
            android:textSize="14sp"
            android:textColor="#333333" />

        <!-- 이메일 입력 -->
        <EditText
            android:id="@+id/delete_account_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/design_input_window1"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="16dp"
            android:textSize="14sp" />

        <!-- 현재 비밀번호 라벨 -->
        <TextView
            android:id="@+id/delete_account_current_pw_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="현재 비밀번호"
            android:textSize="14sp"
            android:textColor="#333333" />

        <!-- 현재 비밀번호 입력 -->
        <EditText
            android:id="@+id/delete_account_current_pw"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/design_input_window1"
            android:hint="현재 비밀번호"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 처음으로 버튼 -->
        <Button
            android:id="@+id/delete_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="탈퇴 하기"
            android:backgroundTint="#3A83BF"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="탈퇴할 시, 포인트 및 모든 데이터와 혜택이 사라집니다."
            android:textSize="13sp"
            android:textColor="#606060" />

    </LinearLayout>
</LinearLayout>


