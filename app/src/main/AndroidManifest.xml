<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.sswu.seatshare">

    <!-- Firebase 통신 필수 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 위치 접근 허용 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@drawable/logo_1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_1"
        android:supportsRtl="true"
        android:theme="@style/Theme.Seatshare">

        <!-- 런처(처음 화면) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignUpActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".MyInfo1Activity" />
        <activity android:name=".MyInfo2Activity" />
        <activity android:name=".SeatRegistration1Activity" />
        <activity android:name=".SeatRegistration2Activity" />
        <activity android:name=".SeatRegistration3Activity" />
        <activity android:name=".SeatRegistration4Activity" />
        <activity android:name=".SeatRegistration5Activity" />
        <activity android:name=".FindPWActivity" />
        <activity android:name=".MyPointActivity" />
        <activity android:name=".MyRankingActivity" />
        <activity android:name=".SeatCheck1Activity" />
        <activity android:name=".SeatCheck2Activity" />
        <activity android:name=".SeatCheck3Activity" />
        <activity android:name=".MySeatCheckActivity" />
        <activity android:name=".GetOff1Activity" />
        <activity android:name=".GetOff2Activity" />

    </application>
</manifest>
